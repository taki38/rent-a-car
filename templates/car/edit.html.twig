{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .full {
            position: relative;
            min-height: 90vh;
        }
    </style>
    <div class="container full p-5">

        <h1 class="text-center mb-5">Modifier {{ form.name.vars.value }}</h1>

        <div class="row">
            <div class="col-sm-6 ">
                {{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}

                {{ form_row(form.name) }}
                {{ form_row(form.Places) }}
                {{ form_row(form.luggage) }}

            </div>

            <div class="col-sm-6">
                {{ form_row(form.fuel) }}
                {{ form_row(form.gearBox) }}
                {{ form_row(form.type) }}

            </div>

        </div>
        <div class="text-center mt-5">
            {%  if form.Image.vars.value.name is defined %}
                <img src="{{ asset('/images/cars/')~form.Image.vars.value.name }}" alt="Image du vÃ©hicule">
            {% endif %}

            {{ form_row(form.Image) }}

            <button type="submit" class="btn btn-success m-5">Valider</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}